@{
    ViewData["Title"] = "Dawaya Pharmacy - Your Trusted Healthcare Partner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content">
                <h1 class="hero-title">Your Health, Our Priority</h1>
                <p class="hero-subtitle">Trusted by thousands of families across the country</p>
                <div class="hero-buttons">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-3">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-person-plus"></i> Register
                    </a>
                </div>
            </div>
            <div class="col-lg-6 hero-image">
                <img src="/images/pharmacy-hero.png" alt="Pharmacy products" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="features-section py-5 bg-light">
    <div class="container">
        <h2 class="section-title text-center mb-5">Why Choose Dawaya?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon-wrapper mb-3">
                            <i class="bi bi-shield-check feature-icon"></i>
                        </div>
                        <h3 class="h4">Authentic Medicines</h3>
                        <p class="text-muted">100% genuine medications from licensed manufacturers with quality guarantees.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon-wrapper mb-3">
                            <i class="bi bi-truck feature-icon"></i>
                        </div>
                        <h3 class="h4">Fast Delivery</h3>
                        <p class="text-muted">Same-day delivery available for urgent prescriptions in metropolitan areas.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon-wrapper mb-3">
                            <i class="bi bi-currency-dollar feature-icon"></i>
                        </div>
                        <h3 class="h4">Best Prices</h3>
                        <p class="text-muted">Price match guarantee on all medications and health products.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials-section py-5">
    <div class="container">
        <h2 class="section-title text-center mb-5">What Our Customers Say</h2>
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="testimonial-carousel owl-carousel owl-theme">
                    <div class="testimonial-item text-center">
                        <div class="testimonial-content bg-white p-4 rounded shadow-sm">
                            <p class="mb-4">"Dawaya Pharmacy saved me when I needed emergency medication late at night. Their 24/7 service is a lifesaver!"</p>
                            <div class="testimonial-author">
                                <img src="/images/testimonial1.jpg" class="rounded-circle mb-2" width="60" alt="Sarah M.">
                                <h5 class="mb-1">Sarah M.</h5>
                                <p class="text-muted small">Regular Customer</p>
                            </div>
                        </div>
                    </div>
                    <div class="testimonial-item text-center">
                        <div class="testimonial-content bg-white p-4 rounded shadow-sm">
                            <p class="mb-4">"The prices are unbeatable and the staff is incredibly knowledgeable. My whole family uses Dawaya."</p>
                            <div class="testimonial-author">
                                <img src="/images/testimonial2.jpg" class="rounded-circle mb-2" width="60" alt="Ahmed K.">
                                <h5 class="mb-1">Ahmed K.</h5>
                                <p class="text-muted small">Customer for 5 years</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call-to-Action Section -->
<section class="cta-section py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Experience Better Healthcare?</h2>
        <p class="lead mb-4">Join thousands of satisfied customers today</p>
        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg px-4">
            <i class="bi bi-person-plus"></i> Create Your Account
        </a>
    </div>
</section>

@section Styles {
    <style>
        :root {
            --dawaya-primary: #2a7fba;
            --dawaya-secondary: #3bb77e;
            --dawaya-light: #f8f9fa;
        }

        .hero-section {
            padding: 5rem 0;
            background: linear-gradient(135deg, rgba(42,127,186,0.9) 0%, rgba(59,183,126,0.9) 100%);
            color: white;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1rem;
            line-height: 1.2;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .hero-image img {
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

            .hero-image img:hover {
                transform: scale(1.02);
            }

        .feature-icon-wrapper {
            width: 60px;
            height: 60px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(42,127,186,0.1);
            border-radius: 50%;
        }

        .feature-icon {
            font-size: 1.5rem;
            color: var(--dawaya-primary);
        }

        .feature-card {
            transition: all 0.3s ease;
            border-radius: 10px;
        }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .testimonials-section {
            background-color: var(--dawaya-light);
        }

        .testimonial-carousel .owl-dots {
            margin-top: 2rem;
            text-align: center;
        }

        .cta-section {
            background: var(--dawaya-primary);
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.2rem;
            }

            .hero-image {
                margin-top: 2rem;
            }
        }
    </style>
}

@section Scripts {
    <!-- jQuery (must come first) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />

    <!-- Owl Carousel CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" />

    <!-- Owl Carousel JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

    <!-- Owl Carousel Init -->
    <script>
        $(document).ready(function () {
            $(".testimonial-carousel").owlCarousel({
                items: 1,
                loop: true,
                autoplay: true,
                autoplayTimeout: 5000,
                autoplayHoverPause: true,
                dots: true,
                nav: false
            });
        });
    </script>
}
