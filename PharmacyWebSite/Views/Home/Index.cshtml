@{
    ViewData["Title"] = "Dawaya Pharmacy - Your Trusted Healthcare Partner";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="hero-title">Your Health, Our Priority</h1>
                <p class="hero-subtitle">Trusted by thousands of families across the country</p>
                <div class="hero-buttons">
                    <a asp-controller="Medicines" asp-action="Index" class="btn btn-primary btn-lg me-3">
                        <i class="bi bi-capsule"></i> Browse Medicines
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-person-plus"></i> Create Account
                    </a>
                </div>
            </div>
           
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <h2 class="section-title text-center mb-5">Why Choose Dawaya?</h2>
        <div class="row">
            <div class="col-md-4 feature-card">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-shield-check feature-icon"></i>
                        <h3 class="feature-title">Authentic Medicines</h3>
                        <p class="feature-text">100% genuine medications from trusted manufacturers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 feature-card">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-truck feature-icon"></i>
                        <h3 class="feature-title">Fast Delivery</h3>
                        <p class="feature-text">Same-day delivery for urgent prescriptions</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 feature-card">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-currency-dollar feature-icon"></i>
                        <h3 class="feature-title">Best Prices</h3>
                        <p class="feature-text">Competitive pricing with regular discounts</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        :root {
            --dawaya-primary: #2a7fba;
            --dawaya-secondary: #3bb77e;
            --dawaya-light: #f8f9fa;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .hero-section {
            padding: 5rem 0;
            background: linear-gradient(135deg, rgba(42,127,186,0.1) 0%, rgba(59,183,126,0.1) 100%);
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 700;
            color: var(--dawaya-primary);
            margin-bottom: 1rem;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            color: #555;
            margin-bottom: 2rem;
        }

        .hero-image {
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dawaya-primary);
            margin-bottom: 1.5rem;
        }

        .section-text {
            font-size: 1.1rem;
            color: #555;
            line-height: 1.6;
        }

        .feature-icon {
            font-size: 2.5rem;
            color: var(--dawaya-primary);
            margin-bottom: 1rem;
        }

        .feature-title {
            font-size: 1.5rem;
            color: var(--dawaya-primary);
            margin-bottom: 1rem;
        }

        .feature-text {
            color: #666;
        }

        .feature-card {
            margin-bottom: 2rem;
        }

            .feature-card .card {
                transition: transform 0.3s;
                border-radius: 10px;
            }

                .feature-card .card:hover {
                    transform: translateY(-5px);
                }

        .btn-primary {
            background-color: var(--dawaya-primary);
            border-color: var(--dawaya-primary);
        }

        .btn-outline-primary {
            color: var(--dawaya-primary);
            border-color: var(--dawaya-primary);
        }

            .btn-outline-primary:hover {
                background-color: var(--dawaya-primary);
                color: white;
            }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}